{
  "compilerOptions": {
    "lib": [
      "ES2018",
      "DOM"
    ],
    "module": "UMD",
    "moduleResolution": "node",
    "target": "ES2018",
    "noImplicitAny": true,
    "removeComments": false,
    "strict": true,
    "pretty": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/node_modules/*"
  ]
}