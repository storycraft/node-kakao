{
  "name": "node-kakao",
  "version": "4.3.0",
  "description": "Loco protocol compatible library",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist_esm/index.js"
    },
    "./*": {
      "require": "./dist/*/index.js",
      "import": "./dist_esm/*/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "dist_esm",
    "readme.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "mocha -r ts-node/register ./tests/*.test.ts",
    "locotest": "node -r ts-node/register loco-test.ts",
    "build": "npm run build:node & npm run build:esm",
    "build:node": "tsc -p tsconfig.build.json --outDir dist --declarationDir dist",
    "build:esm": "rollup -c",
    "docs": "typedoc src",
    "fix": "eslint --fix ./src/**/*",
    "prepublishOnly": "npm run fix && npm run test && npm run build"
  },
  "keywords": [
    "node-kakao",
    "chat-protocol",
    "chat-client",
    "loco-protocol"
  ],
  "author": {
    "name": "storycraft",
    "email": "storycraft@pancake.sh",
    "url": "https://pancake.sh"
  },
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.2.0",
    "@swc/core": "^1.2.62",
    "@swc/helpers": "^0.2.12",
    "@types/bson": "^4.0.0",
    "@types/chai": "^4.2.3",
    "@types/lossless-json": "^1.0.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "^15.0.0",
    "@types/node-forge": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "chai": "^4.2.0",
    "eslint": "^7.19.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.0.0",
    "mocha": "^9.0.0",
    "rollup": "^2.38.1",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.1.0",
    "typedoc": "^0.21.0",
    "typescript": "^4.1.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/storycraft/node-kakao.git"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bson": "^4.2.2",
    "eventemitter3": "^4.0.7",
    "form-data": "^4.0.0",
    "hash-wasm": "^4.4.1",
    "lossless-json": "^1.0.3",
    "node-forge": "^0.10.0",
    "promise-socket": "^7.0.0"
  }  
}
